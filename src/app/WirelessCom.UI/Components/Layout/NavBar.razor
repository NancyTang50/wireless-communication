<!-- Nav bar -->
<div class="py-8">
    <nav class="fixed top-0 w-full bg-white">
        <div class="mx-auto max-w-6xl">
            <div class="flex h-14 items-center justify-start">
                <!-- mobile button -->
                <div class="pl-3 md:hidden">
                    <button class="mobile-menu-button" @onclick="@ShowNav">
                        <svg class="h-10 w-10" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 32 16" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
                        </svg>
                    </button>
                </div>

                <div class="flex space-x-4">
                    <!-- primary nav -->
                    <div class="hidden items-center space-x-1 md:flex">
                        <NavItem Text="Home" Url="/"></NavItem>
                        <NavItem Text="Connectivity" Url="/connectivity"></NavItem>
                    </div>
                </div>
            </div>
        </div>

        <!-- mobile menu -->
        <div hidden="@IsNavHidden" class="mobile-menu shadow-2xl md:hidden">
            <MobileNavItem OnClickCallback="@HideNav" Text="Home" Url="/"></MobileNavItem>
            <MobileNavItem OnClickCallback="@HideNav" Text="Connectivity" Url="/connectivity"></MobileNavItem>
        </div>
    </nav>
</div>

@code {
    private bool IsNavHidden { get; set; } = true;
    private string Title { get; set; } = "Home";

    private void ShowNav()
    {
        IsNavHidden = !IsNavHidden;
    }

    private void HideNav()
    {
        IsNavHidden = true;
    }

}